{
  "name": "react-native-sized-webview",
  "version": "1.0.4",
  "description": "React Native WebView that auto-sizes to match its HTML content—whether you load local HTML or full external websites—without manual measurements, timers, or layout flicker.",
  "main": "./lib/module/index.js",
  "module": "./lib/module/index.js",
  "react-native": "./lib/module/index.js",
  "types": "./lib/typescript/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/typescript/src/index.d.ts",
      "import": "./lib/module/index.js",
      "react-native": "./lib/module/index.js",
      "default": "./lib/module/index.js",
      "source": "./src/index.ts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "lib",
    "android",
    "ios",
    "cpp",
    "*.podspec",
    "react-native.config.js",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/*.map",
    "!**/.*"
  ],
  "scripts": {
    "example": "yarn workspace react-native-sized-webview-example",
    "test": "jest",
    "typecheck": "tsc",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "clean": "del-cli lib",
    "prepare": "bob build",
    "release": "release-it --only-version"
  },
  "keywords": [
    "react-native",
    "webview",
    "ios",
    "android",
    "auto-size",
    "auto-height",
    "responsive",
    "html-rendering",
    "web-content",
    "javascript-bridge",
    "typescript",
    "component",
    "hook",
    "sizing",
    "layout",
    "dynamic-height",
    "content-measurement",
    "mobile",
    "native",
    "performance"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mCodex/react-native-sized-webview.git"
  },
  "author": "Mateus Andrade <mat.andrade@live.com> (https://github.com/mCodex)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mCodex/react-native-sized-webview/issues"
  },
  "homepage": "https://github.com/mCodex/react-native-sized-webview#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/compat": "^1.4.1",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.39.0",
    "@evilmartians/lefthook": "^2.0.2",
    "@react-native/babel-preset": "0.82.1",
    "@react-native/eslint-config": "^0.82.1",
    "@release-it/conventional-changelog": "^10.0.1",
    "@testing-library/react-native": "^13.3.3",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "babel-plugin-react-compiler": "^1.0.0",
    "commitlint": "^20.1.0",
    "del-cli": "^7.0.0",
    "eslint": "^9.39.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.2.0",
    "prettier": "^3.6.2",
    "react": "19.1.0",
    "react-native": "0.82.1",
    "react-native-builder-bob": "^0.40.14",
    "react-native-webview": "^13.16.0",
    "react-test-renderer": "19.1.0",
    "release-it": "^19.0.5",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*",
    "react-native-webview": "*"
  },
  "workspaces": [
    "example"
  ],
  "sideEffects": false,
  "packageManager": "yarn@3.6.1",
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/index.ts",
      "!src/constants/autoHeightBridge.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "angular"
        }
      }
    }
  },
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "module",
        {
          "esm": true
        }
      ],
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "create-react-native-library": {
    "languages": "js",
    "type": "library",
    "version": "0.54.8"
  }
}
